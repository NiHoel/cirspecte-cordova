<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:android="http://schemas.android.com/apk/res/android" id="de.cirspecte" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cirspecte</name>
    <description>
        Cirspecte - An editing software for panorama tours through time
    </description>
    <author email="hoellerich.nico@freenet.de" href="https://github.com/NiHoel/cirspecte">
        Nico HÃ¶llerich
    </author>
    <content src="edit.html" />
	<preference name="fullscreen" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~4.0.1" />
	<plugin name="cordova-plugin-geolocation" spec="~4.0.2" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
